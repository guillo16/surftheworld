
<div class="main-container">
  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  >
  </div>
  <div class="locations">

    <% @locations.each do |location| %>
    <%= link_to location_path(location) do%>
    <div class="location-content">
      <img src="<%= location.photo %>" alt="card img">
      <h3><%= location.name %></h3>
    </div>
       <%end %>
       <%end %>
  </div>



</div>
