<h1> Locations</h1>
<div class="main-container">
  <div class="locations">
    <% @locations.each do |location| %>
    <%= link_to location_path(location) do%>
    <%= location.name %>
    <img src="<%= location.photo %>" alt="card img">
    <%= location.address %>
       <%end %>
  <%end %>
      </div>

  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

</div>
