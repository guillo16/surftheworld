

<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to videos_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "logo.png", height: 50  %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">



    <!-- Links when logged in -->
    <div class="dropdown">
      <button class="dropbtn">Articles <i class="fas fa-angle-down"></i></button>
      <div class="dropdown-content">
        <h5><%= link_to articles_path do %>Articles<% end %></h5>
        <h5><%= link_to articles_path do %>News<% end %></h5>
      </div>
    </div>
    <div class="dropdown">
      <button class="dropbtn">Gear <i class="fas fa-angle-down"></i></button>
      <div class="dropdown-content">
        <!--  -->
      </div>
    </div>
    <div class="dropdown">
      <button class="dropbtn">Videos <i class="fas fa-angle-down"></i></button>
      <div class="dropdown-content">
        <h5><%= link_to "All Videos", videos_path %> </h5>
        <h5><%= link_to videos_path(rating: :desc) do %>
         Trend<%end %></h5>
         <h5><%= link_to videos_path(created_at: :desc) do %>
           Recent<% end %></h5>
         </div>
       </div>
       <div class="dropdown">
        <button class="dropbtn">Locations <i class="fas fa-angle-down"></i></button>
        <div class="dropdown-content">
          <h5><%= link_to locations_path do %>
            Locations<% end %></h5>

          </div>
        </div>



        <!-- Avatar with dropdown menu -->
        <% if user_signed_in? %>
        <div class="navbar-wagon-item">
          <div class="dropdown">
            <button class="dropbtn">
              <%= image_tag "logo.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %> </button>
              <div class="dropdown-content">
                <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i> <%= t(".sign_out", default: "Log out") %>
                <% end %>
              </div>
            </div>
          </div>
          <% else %>
          <!-- Login link (when logged out) -->
          <%= link_to t(".sign_in", default: "Iniciar Sesion"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <% end %>
        </div>

        <!-- Dropdown list appearing on mobile only -->
        <% if user_signed_in? %>
        <div class="navbar-wagon-item hidden-md hidden-lg">
          <div class="dropdown">
            <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li><%= link_to articles_path do %><i class="fas fa-newspaper"></i> Articles</li>
              <% end %>
              <li><%= link_to locations_path do %><i class="fas fa-mountain"></i> Locations</li>
              <% end %>
              <li><%= link_to videos_path do %><i class="fas fa-video"></i> Videos</li>
              <% end %>
              <li><%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i> <%= t(".sign_out", default: "Log out") %>
                <% end %></li>
              </ul>
            </div>
          </div>
          <% else %>
          <div class="navbar-wagon-item hidden-md hidden-lg">
            <div class="dropdown">
              <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
              <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
                <li><%= link_to t(".sign_in", default: "Iniciar Sesion"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
                <li><%= link_to articles_path do %><i class="fas fa-newspaper"></i> Articles</li>
                <% end %>

                <li><%= link_to videos_path do %><i class="fas fa-video"></i> Videos</li>
                <% end %>
              </ul>
              <% end %>
            </div>
          </div>
        </div>
